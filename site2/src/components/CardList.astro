---
import PixelBorderWrapper from "./PixelBorderWrapper.astro";
import Card from "./Card.astro";
import CardInfo from "./CardInfo.astro";
import jokers from "../data/jokers.ts";
---

<div class="max-w-screen-xl">
    <PixelBorderWrapper
        classNameOuter="bg-balatro-grey"
        classNameInner="bg-balatro-black-light p-4"
    >
        <PixelBorderWrapper
            classNameOuter="bg-balatro-black"
            classNameInner="bg-balatro-black"
        >
            <div class="grid grid-cols-5 p-4">
              {jokers.map((joker, index) => <Card joker={joker} anchorName={index}/>)}
            </div>
        </PixelBorderWrapper>
    </PixelBorderWrapper>
    {jokers.map((joker, index) => <CardInfo name={joker.name} text={joker.text} badge={joker.badge} anchorName={index} />)}
</div>
