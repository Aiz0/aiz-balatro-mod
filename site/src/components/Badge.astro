---
import PixelBorderWrapper from "./PixelBorderWrapper.astro";
import AnimatedText from "./AnimatedText.astro";
import { type jokerData } from "../data/jokers";
import { colors } from "../theme";

interface Props {
  badge: jokerData["badge"];
}

const { badge } = Astro.props;

const s = {
  Common: "bg-balatro-common",
  Uncommon: "bg-balatro-uncommon",
  Rare: "bg-balatro-rare",
  Legendary: "bg-balatro-legendary",
};

const style = s[badge];

const borderMap = {
  Common: colors.balatro.common,
  Uncommon: colors.balatro.uncommon,
  Rare: colors.balatro.rare,
  Legendary: colors.balatro.legendary,
};

const borderColor = borderMap[badge];
---

<PixelBorderWrapper
  borderColor={borderColor}
  classNameInner={`w-36 py-1 text-2xl grid justify-items-center ${style}`}
>
  <AnimatedText text={badge} animation="1" />
</PixelBorderWrapper>
