---
import Image from "astro/components/Image.astro";

import testimage from "../../../assets/2x/j_aiz_chill_joker.png";
import { jokers } from "../jokers";
interface Props {
  name: string;
  text: string[];
  badge: string;
  soul: boolean;
}
const { name, text, badge, soul } = Astro.props;

let cols = {};

const regex = /{([^}]+)}/g;

const modifiedText = text.map((line) => {
  return (
    line.replace("{}", "</span>").replace(regex, (_match, p1) => {
      const classes: string[] = [];
      p1.split(",").forEach((item: string) => {
        const [selector, color] = item.split(":");
        if (selector === "C") {
          classes.push(`text-balatro-${color}`);
        } else if (selector === "X") {
          classes.push(`bg-balatro-${color}`, "rounded-md px-1");
        }
      });
      return "</span><span class='" + classes.join(" ") + "'>";
    }) + "</span>"
  );
});
---

<div
  class="bg-balatro-black border-2 px-8 flex flex-col items-center text-balatro-white text-lg"
>
  <h3 class="">{name}</h3>
  <div>
    <Image src={testimage} alt=" " />
    <!-- Badge -->
    <div
      class={`rounded-lg text-center p-2 bg-balatro-badge-${badge.toLowerCase()}`}
    >
      {badge}
    </div>
  </div>
  {modifiedText.map((line) => <div set:html={line} />)}
</div>
